USES_FLEX = true

TARGET	      = igen

#VPATH         = ../../common/src

SRCS 	     += \
		../src/arg.C \
		../src/type_defn.C \
		../src/remote_func.C \
		../src/message_layer.C \
		../src/Options.C \
		../src/interface_spec.C \
		../src/signature.C \
		../src/templates.C \
		../src/main.C \
		parser.C \
		scanner.C

SYSLIBS	     += $(FLEX_LIB) -lcommon

ifdef CROSSCOMPILER
SYSLIBS      += -lstdc++
endif

CXXFLAGS     += $(USEFULWARNINGS) -fno-inline
TFLAGS       += $(USEFULWARNINGS) 

IFLAGS       += -I../$(PLATFORM) -I../src -I../../mrnet/mrnet/h/mrnet
PREREQUISITES = parser.C scanner.C

all:	$(TARGET)

templates.o: ../src/templates.C 
	$(CXX) $(TFLAGS) -c ../src/templates.C

y.tab.h:    scanner.C

